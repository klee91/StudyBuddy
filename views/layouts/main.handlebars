<script>
    $(document).ready(function() {
	$('#chatTxt').css("visibility","hidden");
	$('#profileTxt').css("visibility","hidden");
	$('#logOutTxt').css("visibility","hidden");
	$('#settingsTxt').css("visibility","hidden");
  $('#studyBuddyTxt').css("visibility","hidden");
});

// Hover function for circle menu
//-----------------------START---------------------------
$('#seeStudybuddy').mouseover(function() {
  $('#studyBuddyTxt').css("visibility","visible");
});

$('#seeStudybuddy').mouseout(function() {
  $('#studyBuddyTxt').css("visibility","hidden");
});

$('#seeChat').mouseover(function() {
  $('#chatTxt').css("visibility","visible");
});

$('#seeChat').mouseout(function() {
  $('#chatTxt').css("visibility","hidden");
});

$('#seeProfile').mouseover(function() {
  $('#profileTxt').css("visibility","visible");
});

$('#seeProfile').mouseout(function() {
  $('#profileTxt').css("visibility","hidden");
});

$('#btnLogout').mouseover(function() {
  $('#logOutTxt').css("visibility","visible");
});

$('#btnLogout').mouseout(function() {
  $('#logOutTxt').css("visibility","hidden");
});

$('#seeSettings').mouseover(function() {
  $('#settingsTxt').css("visibility","visible");
});

$('#seeSettings').mouseout(function() {
  $('#settingsTxt').css("visibility","hidden");
});
//-----------------------END---------------------------
</script>

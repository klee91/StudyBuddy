<script>
$(document).ready(function() {
	$('#chatTxt').css("display","none");
	$('#profileTxt').css("display","none");
	$('#logOutTxt').css("display","none");
	$('#settingsTxt').css("display","none");
  $('#studyBuddyTxt').css("display","none");
});

// Hover function for circle menu
//-----------------------START---------------------------
function mousein1() {
$('#studyBuddyTxt').fadeIn("fast")
}
function mouseout1() {
$('#studyBuddyTxt').css("display","none")
}

function mousein2() {
$('#chatTxt').fadeIn("fast")
}
function mouseout2() {
$('#chatTxt').css("display","none")
}

function mousein3() {
$('#profileTxt').fadeIn("fast")
}
function mouseout3() {
$('#profileTxt').css("display","none")
}

function mousein4() {
$('#logOutTxt').fadeIn("fast")
}
function mouseout4() {
$('#logOutTxt').css("display","none")
}

function mousein5() {
$('#settingsTxt').fadeIn("fast")
}
function mouseout5() {
$('#settingsTxt').css("display","none")
}

$('#seeStudybuddy').hover( mousein1 , mouseout1);
$('#seeChat').hover( mousein2 , mouseout2);
$('#seeProfile').hover( mousein3 , mouseout3);
$('#btnLogout').hover( mousein4 , mouseout4);
$('#seeSettings').hover( mousein5 , mouseout5);
//-----------------------END---------------------------
</script>
</body>
</html>